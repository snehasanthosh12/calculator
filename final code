ch=int(input("1.additions, 2.subtraction 3.multiplication 4.division"))
if (ch==1):
    num1=int(input("enter the first number"))
    num2=int(input("enter the second number"))
    def addition (x,y):
        sum=x+y
        return sum
    print("sum is",addition(num1,num2))
elif (ch==2):
    num1=int(input("enter the first number"))
    num2=int(input("enter the second number"))
    def subtraction (x,y):
        difference=x-y
        return difference
    print("difference is",subtraction(num1,num2))
elif (ch==3):
    num1=int(input("enter the first number"))
    num2=int(input("enter the second number"))
    def multiplication (x,y):
        product=x*y
        return product
    print("product is",multiplication(num1,num2))
elif (ch==4):
    num1=int(input("enter the first number"))
    num2=int(input("enter the second number"))
    def division (x,y):
        quotient=x/y
        return quotient
    print("quotient is",division(num1,num2))
else:
    print("invalid input")
    
